<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/bg_vip_top" />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="@drawable/vip_top_shape"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15">

                    <View
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_15"
                        android:background="@drawable/shape_vip_tv_bg" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/vip_string1"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_marginLeft="@dimen/dp_15"
                        android:id="@+id/rll_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_128"
                        android:layout_weight="1"
                        android:background="@drawable/vip_check">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/one_year"
                                android:textColor="@color/color_E8489E"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_1_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/every_day_five"
                                android:textColor="@color/color_E8489E"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/color_E8489E"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_1_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/money_199"
                                android:textColor="@color/color_E8489E"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rll_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_128"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:background="@drawable/vip_uncheck">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_2_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/three_month"
                                android:textColor="@color/color_000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_2_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/every_day_seven"
                                android:textColor="@color/color_000000"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_2_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/color_000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_2_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/money_49"
                                android:textColor="@color/color_000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginRight="@dimen/dp_15"
                        android:id="@+id/rll_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_128"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:background="@drawable/vip_uncheck">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_3_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/one_month"
                                android:textColor="@color/color_000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_3_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/every_day_nine"
                                android:textColor="@color/color_000000"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_3_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/color_000000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_3_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/money_19"
                                android:textColor="@color/color_000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="@dimen/dp_227"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/buy_vip_button"
                    android:gravity="center"
                    android:text="@string/subscribe_now"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15">

                    <View
                        android:layout_width="@dimen/dp_3"
                        android:layout_height="@dimen/dp_15"
                        android:background="@drawable/shape_vip_tv_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/vip_privilege"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@drawable/vip_itme_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_11"
                    android:paddingRight="@dimen/dp_11"
                    android:paddingTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_vip_free" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每个月免费享有无限次制作次数"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="冲印更划算"
                            android:textColor="@color/color_969696"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/vip_itme_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_11"
                    android:paddingRight="@dimen/dp_11"
                    android:paddingTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_vip_jiesuo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="解锁更多证件类型"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="冲印更划算"
                            android:textColor="@color/color_969696"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:background="@drawable/vip_itme_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_11"
                    android:paddingRight="@dimen/dp_11"
                    android:paddingTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_vip_no_ad" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="移除广告"
                            android:textColor="@color/color_000000"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="让你免除广告打扰,安心体验功能"
                            android:textColor="@color/color_969696"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</layout>
