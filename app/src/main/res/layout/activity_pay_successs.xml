<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="baseViewModel"
            type="com.qihe.zzj.view.MakePhotoViewModel" />
    </data>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="支付详情"
                android:textColor="@color/black"
                android:textSize="@dimen/sixth"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="?android:attr/actionBarItemBackground"
                android:padding="15dp"
                android:src="@drawable/back_icon" />

            <TextView
                android:id="@+id/share_iv"
                android:padding="@dimen/dp_15"
                android:text="@string/share_pic"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:layout_gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chenggong_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="支付成功"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="图片已保存至"
                android:textColor="@color/color_7B7B7B"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="系统相册和App我的订单中"
                android:textColor="@color/color_7B7B7B"
                android:textSize="@dimen/sp_16" />


            <LinearLayout
                android:id="@+id/pay_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back_home_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_order_tv_cancel_bg"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_22"
                    android:paddingTop="@dimen/dp_11"
                    android:text="返回首页"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/see_order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_order_tv_pay_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingRight="@dimen/dp_22"
                    android:paddingTop="@dimen/dp_11"
                    android:text="查看订单"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>