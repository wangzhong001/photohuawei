<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/bg_icon_icon"
            android:layout_width="match_parent"
            android:layout_height="173dp" />
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/specification_details"
                android:textColor="@color/white"
                android:textSize="@dimen/sixth"
                android:textStyle="bold" />

            <ImageView
                android:background="?android:attr/actionBarItemBackground"
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="15dp"
                android:src="@drawable/back_icon_white" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_FFFFFF">

            <TextView
                android:id="@+id/tv_photo_album"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/select_albums"
                android:textColor="@color/color_414AFD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_take_picture"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@drawable/shape_color_grdient_cor"
                android:gravity="center"
                android:text="@string/take_photo"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/ll_bottom"
            android:background="@color/color_EEEEEE" />

        <ScrollView
            android:scrollbars="none"
            android:layout_marginTop="45dp"
            android:layout_below="@id/tool_bar"
            android:layout_above="@+id/view_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationZ="1dp"
                    android:background="@drawable/shape_details_rll_bg">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="23dp"
                        android:text=""
                        android:textColor="@color/color_000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_name"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/touxiang_icon" />

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginLeft="12dp">

                        <TextView
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/zhichi_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detail_string1"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />

                        <TextView
                            android:visibility="gone"
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/zhichi_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/detail_string2"
                            android:textColor="@color/color_000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/detail_string3"
                                android:textColor="@color/color_A6A6A6"
                                android:textSize="12sp" />


                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_x_mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="25"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=" x "
                                    android:textSize="12sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_y_mm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="35"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="mm"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/detail_string4"
                                android:textColor="@color/color_A6A6A6"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_x_px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="295"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=" x "
                                    android:textSize="12sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_y_px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="413"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="px"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_000000"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/detail_string5"
                                android:textColor="@color/color_A6A6A6"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="300DPI"
                                android:textSize="16sp"
                                android:textColor="@color/color_000000"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rll_1"

                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_details_rll2_bg">

                    <TextView
                        android:id="@+id/tv_bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/detail_string6"
                        android:textColor="@color/color_808080"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_bg_color"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/color_EA3323" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:background="@color/color_FFFFFF" />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/color_568CD5" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_bg_size"
                        android:layout_below="@+id/tv_bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/detail_string7"
                        android:textColor="@color/color_808080"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_alignTop="@+id/tv_bg_size"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="@string/detail_string8"
                        android:textColor="@color/color_000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_miaoshu"
                        android:layout_below="@+id/tv_bg_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="20dp"
                        android:text="其它"
                        android:textColor="@color/color_808080"
                        android:textSize="14sp" />


                    <RelativeLayout
                        android:layout_alignTop="@+id/tv_miaoshu"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_miaoshu_top"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="免冠，照片可看见两耳轮廓和相"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_miaoshu_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当于男士喉结处的地方"
                            android:textColor="@color/color_000000"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rll_2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/detail_string9"
                    android:textColor="@color/color_000000"
                    android:textSize="16sp" />
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    app:indicator_margin="8dp"
                    app:indicator_height="9dp"
                    app:indicator_width="9dp"
                    app:indicator_drawable_selected="@drawable/shape_banner_indicator_selected"
                    app:indicator_drawable_unselected="@drawable/shape_banner_indicator_unselected"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginBottom="26dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</layout>
